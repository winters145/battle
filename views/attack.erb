<!DOCTYPE html>

<html>
  <head>
    <style>
    body {
      background-color: rgb(134, 1, 1);
    }
    
    h1 {
      color: rgb(3, 3, 2);
      text-align: center;
      position: absolute;top:300px;left:600px;
    }
    </style>
  </head>

<h1>
  <% if $game.turn == 1 %>
    <%= $game.player_2.name %> attacked <%= $game.player_1.name %>
  <% else %>
    <%= $game.player_1.name %> attacked <%= $game.player_2.name %>
  <% end %>

  <br>

  <% if $game.player_1.hit_points >= 0 && $game.player_2.hit_points >= 0 %>
    <form action='/play'>
      <input type='submit' value='Return'>
    </form>
  <% end %>

  <% if $game.player_1.hit_points <= 0 %>
    <%= $game.player_1.name %> LOSES!
    <form action='/'>
      <input type='submit' value='Finish'>
    </form>
  <% elsif $game.player_2.hit_points <= 0 %>
    <%= $game.player_2.name %> LOSES!
    <form action='/'>
      <input type='submit' value='Finish'>
    </form>
  <% end %>

</h1>
